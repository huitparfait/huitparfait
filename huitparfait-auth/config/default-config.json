{
  "env": {
    "doc": "The applicaton environment.",
    "format": [
      "production",
      "development",
      "test"
    ],
    "default": "development",
    "env": "NODE_ENV"
  },

  "server": {
    "port": {
      "doc": "Port to bind",
      "format": "port",
      "default": 3000,
      "env": "SERVER_PORT"
    }
  },

  "cookie": {
    "secret": {
      "default": "81b02282-e5d5-464c-9d1b-b11eb8276bb2",
      "env": "COOKIE_SECRET"
    },
    "isSecure": {
      "default": false,
      "env": "COOKIE_IS_SECURE"
    },
    "ttl": {
      "format": "duration",
      "default": "30 days"
    }
  },

  "jwt": {
    "publicKeyPath": {
      "default": "../keys/jwt-public.pem",
      "env": "JWT_PUBLIC_KEY_PATH"
    },
    "privateKeyPath": {
      "default": "../keys/jwt-private.pem",
      "env": "JWT_PRIVATE_KEY_PATH"
    }
  },

  "proxy": {
    "apiUrl": {
      "default": "http://localhost:3100",
      "env": "PROXY_API_URL"
    },
    "frontUrl": {
      "default": "http://localhost:8081",
      "env": "PROXY_FRONT_URL"
    }
  },

  "google": {
    "clientId": {
      "default": "foobar",
      "env": "GOOGLE_CLIENT_ID"
    },
    "clientSecret": {
      "default": "foobar",
      "env": "GOOGLE_CLIENT_SECRET"
    }
  },

  "facebook": {
    "clientId": {
      "default": "foobar",
      "env": "FACEBOOK_CLIENT_ID"
    },
    "clientSecret": {
      "default": "foobar",
      "env": "FACEBOOK_CLIENT_SECRET"
    }
  },

  "yahoo": {
    "clientId": {
      "default": "foobar",
      "env": "YAHOO_CLIENT_ID"
    },
    "clientSecret": {
      "default": "foobar",
      "env": "YAHOO_CLIENT_SECRET"
    }
  }
}
